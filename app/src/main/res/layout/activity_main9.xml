<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity9">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg12"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/bangers"
        android:text="Listen and Follow"
        android:textAlignment="center"
        android:textSize="41sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/alatsi"
        android:text="**click the picture to listen to the sound**"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="#730000" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="215dp"
        android:layout_height="228dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="230dp"
        app:srcCompat="@drawable/atuk" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="262dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="210dp"
        app:srcCompat="@drawable/nenek" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="180dp"
        android:layout_height="231dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="500dp"
        app:srcCompat="@drawable/papa" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="190dp"
        android:layout_height="228dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="500dp"
        app:srcCompat="@drawable/mama" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="760dp"
        android:text="Next"
        android:textSize="20sp"
        android:backgroundTint="#E91E63"
        android:onClick="nextNex"/>

</RelativeLayout>