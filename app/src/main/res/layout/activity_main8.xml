<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity8">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg8"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/bangers"
        android:text="Listen and Follow"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/alatsi"
        android:text="**click the picture to listen to the sound**"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="#730000"/>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="190dp"
        android:layout_height="170dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="170dp"
        app:srcCompat="@drawable/six" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="190dp"
        android:layout_height="170dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="360dp"
        app:srcCompat="@drawable/eight" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="190dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        app:srcCompat="@drawable/ten" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="190dp"
        android:layout_height="170dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="170dp"
        app:srcCompat="@drawable/seven" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="190dp"
        android:layout_height="170dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="360dp"
        app:srcCompat="@drawable/nine" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="760dp"
        android:text="Next"
        android:textSize="20sp"
        android:backgroundTint="#E91E63"
        android:onClick="nextNe"
        />


</RelativeLayout>